class Airport {
private:
    std::vector<Flight> flights;

public:
    void addFlight(const Flight& flight) {
        flights.push_back(flight);
    }

    void removeFlight(const std::string& flightNumber) {
        for (auto it = flights.begin(); it != flights.end(); ++it) {
            if (it->flightNumber == flightNumber) {
                flights.erase(it);
                break;
            }
        }
    }

    void viewFlights() const {
        for (const auto& flight : flights) {
            std::cout << "Flight " << flight.flightNumber << ": " << flight.planeName
                << " from " << flight.departure << " to " << flight.destination
                << " departing at " << flight.departureTime << " and arriving at "
                << flight.arrivalTime << ", ticket price: $" << flight.ticketPrice << std::endl;
        }
    }
};
